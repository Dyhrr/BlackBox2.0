# Key changes:
# - Added backend env vars for Django and DB.
# Example environment variables for frontend
# Set to true during development to show Dev/Test panel
VITE_SHOW_DEV_PANEL=true

# Enable admin UI only for development and whitelisted IDs
VITE_ENABLE_DEV_ADMIN=true
# Comma-separated Discord IDs allowed to access admin
VITE_ADMIN_IDS=344538646457876481,720053524620378134,303898072860065792
# Optional: dev-only test admin users (JSON array)
# VITE_ADMIN_USERS=[{"username":"dev","password":"dev"}]

# Backend (Django)
DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000
# Example: DATABASE_URL=postgres://user:pass@localhost:5432/blackbox
DATABASE_URL=
# Optional: allow Django admin in prod
ALLOW_ADMIN=false

# Vite integration
VITE_DEV_SERVER=http://127.0.0.1:5173
VITE_ASSETS_URL_PREFIX=frontend/dist
